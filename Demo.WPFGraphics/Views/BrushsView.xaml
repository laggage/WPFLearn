<UserControl x:Class="Demo.WPFGraphics.Views.BrushsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:views="clr-namespace:Demo.WPFGraphics.Views"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="620">
    <Border>
        <TabControl>
            <TabItem Header="SolidColorBrush">
                <views:SolidColorBrushView/>
            </TabItem>
            <TabItem Header="LinearGradientBrush">
                <views:LinearGradientBrushView/>
            </TabItem>
            <TabItem Header="RadialGradientBrush">
                <views:RadioGradientBrushView/>
            </TabItem>
            <TabItem Header="TileBrush">
                <ScrollViewer>
                    <views:TileBrushView/>
                </ScrollViewer>
            </TabItem>
        </TabControl>  
    </Border>
</UserControl>
