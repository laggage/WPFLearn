<UserControl x:Class="Demo.WPFGraphics.Views.RadioGradientBrushView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Demo.WPFGraphics.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ListBox Margin="20">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBoxItem>
                <StackPanel Margin="5">
                    <Ellipse MinWidth="60" MinHeight="60">
                        <Ellipse.Fill>
                            <RadialGradientBrush >
                                <GradientStop Color="#FF40E3EE"/>
                                <GradientStop Color="#FFA94FDE" Offset="0.4"/>
                                <GradientStop Color="#FF37EB4C" Offset="0.8"/>
                                <GradientStop Color="#FF8988E7" Offset="1"/>
                            </RadialGradientBrush>
                        </Ellipse.Fill>
                    </Ellipse>
                </StackPanel>
            </ListBoxItem>
        </ListBox>
    </Grid>
</UserControl>
