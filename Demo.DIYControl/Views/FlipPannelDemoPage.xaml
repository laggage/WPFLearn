<Page x:Class="Demo.DIYControl.Views.FlipPannelDemoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:ctrl="clr-namespace:Demo.DIYControl.Controls.DeepInDIY"
      mc:Ignorable="d" 
      Title="FlipPannelDemoPage">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <ctrl:FlipPannel 
                         MaxHeight="400"
                         Padding="5"
                         CornerRadius="3">
                <ctrl:FlipPannel.FrontContent>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <Image Stretch="Uniform" 
                           Source="/Assets/beauty.jpg"/>
                    <TextBlock Grid.Row="1" 
                               Text="这是正面,反面更精彩." 
                               HorizontalAlignment="Center" 
                               Padding="0,3"/>
                </Grid>
                </ctrl:FlipPannel.FrontContent>
                <ctrl:FlipPannel.BackContent>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="反面让你失望了嘛,哈哈."
                               Grid.Row="1" 
                               HorizontalAlignment="Center" Padding="0,3"/>
                    <Image Source="/Demo.DIYControl;component/Assets/beauty2.jpg"/>
                </Grid>
                </ctrl:FlipPannel.BackContent>
            </ctrl:FlipPannel>

        <ctrl:FlipPannel Grid.Column="1" 
                         MaxHeight="400"
                         CornerRadius="2"
                         Style="{StaticResource AccentFlipPannelStyle}" Margin="10,0,0,0">
            <ctrl:FlipPannel.FrontContent>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0"
                            BorderThickness="0"
                            Background="{DynamicResource AccentBaseColorBrush}">
                        <TextBlock Text="AccentFlipPannel"
                                   Padding="0 10"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Foreground="White"/>
                    </Border>
                    <Image Grid.Row="1" Stretch="Uniform" 
                           Source="/Assets/beauty.jpg"
                           HorizontalAlignment="Center"/>
                    <TextBlock Grid.Row="2" 
                               Text="这是正面,反面更精彩." 
                               HorizontalAlignment="Center" 
                               Padding="0,3"/>
                </Grid>
            </ctrl:FlipPannel.FrontContent>
            <ctrl:FlipPannel.BackContent>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="反面让你失望了嘛,哈哈."
                               Grid.Row="1" 
                               HorizontalAlignment="Center" Padding="0,3"/>
                    <Image Source="/Demo.DIYControl;component/Assets/beauty2.jpg"/>
                </Grid>
            </ctrl:FlipPannel.BackContent>
        </ctrl:FlipPannel>

        <ctrl:FlipPannel Grid.Column="2" MaxHeight="400"
                         CornerRadius="2"
                         Style="{StaticResource FlipPannelHasHeadersStyle}"
                         Margin="10 0 0 0">
            <ctrl:FlipPannel.FlipHeader>
                <Border>
                    <TextBlock Text="去反面" HorizontalAlignment="Center"/>
                </Border>
            </ctrl:FlipPannel.FlipHeader>
            <ctrl:FlipPannel.Header>
                <Border Grid.Row="0"
                            BorderThickness="0"
                            Background="{DynamicResource AccentBaseColorBrush}">
                    <TextBlock Text="AccentFlipPannel"
                                   Padding="0 10"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Foreground="White"/>
                </Border>
            </ctrl:FlipPannel.Header>
            <ctrl:FlipPannel.FrontContent>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                
                    <Image Grid.Row="1" Stretch="Uniform" 
                           Source="/Assets/beauty.jpg"
                           HorizontalAlignment="Center"/>
                    <TextBlock Grid.Row="2" 
                               Text="这是正面,反面更精彩." 
                               HorizontalAlignment="Center" 
                               Padding="0,3"/>
                </Grid>
            </ctrl:FlipPannel.FrontContent>
            <ctrl:FlipPannel.BackContent>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="反面让你失望了嘛,哈哈."
                               Grid.Row="1" 
                               HorizontalAlignment="Center" Padding="0,3"/>
                    <Image Source="/Demo.DIYControl;component/Assets/beauty2.jpg"/>
                </Grid>
            </ctrl:FlipPannel.BackContent>
        </ctrl:FlipPannel>

        <ctrl:FlipPannel Grid.Column="3"
                         MaxHeight="400"
                         Margin="10"
                         Style="{StaticResource ThemeStyle.TransitionFilpPannel}">
            <ctrl:FlipPannel.FlipHeader>
                <Border>
                    <TextBlock Text="去反面" HorizontalAlignment="Center"/>
                </Border>
            </ctrl:FlipPannel.FlipHeader>
            <ctrl:FlipPannel.Header>
                <Border Grid.Row="0"
                            BorderThickness="0"
                            Background="{DynamicResource AccentBaseColorBrush}">
                    <TextBlock Text="AccentFlipPannel"
                                   Padding="0 10"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Foreground="White"/>
                </Border>
            </ctrl:FlipPannel.Header>
            <ctrl:FlipPannel.FrontContent>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <Image Grid.Row="1" Stretch="Uniform" 
                           Source="/Assets/beauty.jpg"
                           HorizontalAlignment="Center"/>
                    <TextBlock Grid.Row="2" 
                               Text="这是正面,反面更精彩." 
                               HorizontalAlignment="Center" 
                               Padding="0,3"/>
                </Grid>
            </ctrl:FlipPannel.FrontContent>
            <ctrl:FlipPannel.BackContent>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="反面让你失望了嘛,哈哈."
                               Grid.Row="1" 
                               HorizontalAlignment="Center" Padding="0,3"/>
                    <Image Source="/Demo.DIYControl;component/Assets/beauty2.jpg"/>
                </Grid>
            </ctrl:FlipPannel.BackContent>
        </ctrl:FlipPannel>
    </Grid>
</Page>
